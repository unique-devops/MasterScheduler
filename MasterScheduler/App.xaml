<Application x:Class="MasterScheduler.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
             xmlns:views="clr-namespace:MasterScheduler.Views"
             xmlns:vm="clr-namespace:MasterScheduler.ViewModels"
             xmlns:local="clr-namespace:MasterScheduler"
             >
    <Application.Resources>
        
        <DropShadowEffect x:Key="DropShadowEffect"
                      Color="Black"
                      Direction="270"
                      ShadowDepth="5"
                      BlurRadius="10"
                      Opacity="0.5"/>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    </Application.Resources>
</Application>
