<Window x:Class="MasterScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:MasterScheduler.Views"
        xmlns:vm="clr-namespace:MasterScheduler.ViewModels"
        xmlns:local="clr-namespace:MasterScheduler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <views:DashboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:TaskTypeSelectionViewModel}">
                <views:TaskTypeSelectionView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SQLBackupScheduleViewModel}">
                <views:SQLBackupScheduleView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MSSQLConnectViewModel}">
                <views:MSSQLConnectView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SchedulerSettingsViewModel}">
                <views:SchedulerSettingsView/>
            </DataTemplate>

        </Grid.Resources>
        <ContentControl Content="{Binding NavigationService.CurrentViewModel}" />
        <views:ToastMessage x:Name="GlobalToast" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <views:LoaderControl x:Name="GlobalLoader" Panel.ZIndex="999" />
    </Grid>
</Window>
