<Window x:Class="MasterScheduler.Views.DatabaseSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterScheduler.Views"
        mc:Ignorable="d"
        Title="DatabaseSelectionDialog" Height="350" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center" Text="Select Database"/>
        <ListBox Grid.Row="1" ItemsSource="{Binding AvailableDatabases}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="75" Margin="0,0,5,0" Click="Ok_Click"/>
                <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
            </StackPanel>
       
    </Grid>
</Window>
