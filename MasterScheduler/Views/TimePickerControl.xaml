<UserControl x:Class="MasterScheduler.Views.TimePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MasterScheduler.Views"             
             Height="41" Width="163">
    <Border BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="6"            
            Background="White" Width="Auto">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Hour -->
            <TextBox x:Name="HourTextBox"
                     BorderBrush="Transparent"
                     Background="Transparent"
                     FontSize="24"
                     Width="40"
                     TextAlignment="Center"
                     Text="12" MaxLength="2"
                     GotFocus="HourTextBox_GotFocus"/>

            <!-- Separator -->
            <TextBlock Text=":" FontSize="24" FontWeight="Bold" VerticalAlignment="Top" />

            <!-- Minute -->
            <TextBox x:Name="MinuteTextBox"
                     BorderBrush="Transparent"
                     Background="Transparent"
                     FontSize="24"
                     Width="40"
                     TextAlignment="Center"
                     Text="00" MaxLength="2"
                     GotFocus="MinuteTextBox_GotFocus"/>
            
            <!-- AM/PM -->
            <ComboBox x:Name="AmPmComboBox" HorizontalContentAlignment="Center" Width="55" FontSize="16"
                       SelectionChanged="AmPmComboBox_SelectionChanged">
                <ComboBoxItem Content="AM"/>
                <ComboBoxItem Content="PM"/>
            </ComboBox>
            
            <!-- Up/Down -->
            <StackPanel>
                <RepeatButton Content="▲" Width="20" Click="Up_Click"/>
                <RepeatButton Content="▼" Width="20" Click="Down_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
